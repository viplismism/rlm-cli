  "keywords": [
    "rlm",
    "recursive-language-model",
    "llm",
    "cli",
    "agent"
  ],
  "license": "MIT",
  "dependencies": {
    "@mariozechner/pi-ai": "^0.55.1"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  }
}
