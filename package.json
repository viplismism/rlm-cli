{
  "name": "rlm-cli",
  "version": "0.2.3",
  "description": "Standalone CLI for Recursive Language Models (RLMs) â€” implements Algorithm 1 from arXiv:2512.24601",
  "type": "module",
  "bin": {
    "rlm": "./bin/rlm.mjs"
  },
  "main": "dist/main.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/runtime.py",
    "bin",
    "rlm_config.yaml"
  ],
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc && cp src/runtime.py dist/",
